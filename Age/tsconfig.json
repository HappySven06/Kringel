{
  "compilerOptions": {
    "target": "ES6",                                  /* Output modern JS syntax */
    "module": "ES6",                                  /* Use ES module syntax (import/export) */
    "moduleResolution": "node",                       /* Node-style resolution for modules */
    "rootDir": "./",                                  /* Root directory for input files */
    "outDir": "./",                                    /* Output directory */
    "esModuleInterop": true,                          /* Interop support for CommonJS-style modules */
    "forceConsistentCasingInFileNames": true,         /* Ensure consistent import case */
    "strict": true,                                   /* Enable strict type checking */
    "skipLibCheck": true                              /* Skip checking .d.ts files */
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
